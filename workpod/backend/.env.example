# Server Configuration
PORT=3001
NODE_ENV="development"

# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/workpod_dev"
TEST_DATABASE_URL="postgresql://postgres:password@localhost:5432/workpod_test"

# JWT Configuration
JWT_SECRET="replace-with-your-secret"
JWT_ACCESS_SECRET="replace-with-your-access-secret"
JWT_REFRESH_SECRET="replace-with-your-refresh-secret"
JWT_EXPIRES_IN="24h"

# Stripe Configuration
STRIPE_SECRET_KEY="your-stripe-secret"
STRIPE_WEBHOOK_SECRET="your-webhook-secret"

# PayPal Configuration
PAYPAL_CLIENT_ID="your_paypal_client_id"
PAYPAL_CLIENT_SECRET="your_paypal_client_secret"

# TTLock Configuration
TTLOCK_CLIENT_ID="your-ttlock-id"
TTLOCK_CLIENT_SECRET="your-ttlock-secret"

# Frontend URL
FRONTEND_URL="http://localhost:3000"

# Logging
LOG_LEVEL="info"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100